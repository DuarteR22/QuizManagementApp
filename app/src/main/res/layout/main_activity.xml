<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#1A2130">
    <TextView
        android:id="@+id/titulo_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestão de Quizzes e Questões"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#E0E0E0" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#222B3D"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo_label">

        <TextView
            android:id="@+id/tv_visao_geral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visão Geral"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_numero_quizzes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Quizzes: 0"
            android:textSize="16sp"
            android:textColor="#A0A0A0"
            app:layout_constraintTop_toBottomOf="@id/tv_visao_geral"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_numero_questoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Questões: 0"
            android:textSize="16sp"
            android:textColor="#A0A0A0"
            app:layout_constraintTop_toBottomOf="@id/tv_numero_quizzes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_inserir_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="INSERIR NOVO QUIZ"
        android:backgroundTint="#FF8C00" android:textColor="#FFFFFF"
        android:paddingVertical="14dp"
        android:textSize="16sp"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_main" />

    <Button
        android:id="@+id/btn_inserir_questao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="INSERIR NOVA QUESTÃO"
        android:backgroundTint="#FF8C00" android:textColor="#FFFFFF"
        android:paddingVertical="14dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_inserir_quiz" />

    <TextView
        android:id="@+id/tv_titulo_questao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Resolver uma Questão"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_inserir_questao" />

    <EditText
        android:id="@+id/et_indice_questao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:hint="Índice da Questão"
        android:inputType="number"
        android:textColor="#E0E0E0"
        android:textColorHint="#A0A0A0"
        android:backgroundTint="#A0A0A0" app:layout_constraintEnd_toStartOf="@+id/btn_resolve_questao"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_questao" />

    <Button
        android:id="@+id/btn_resolve_questao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RESOLVER"
        android:backgroundTint="#FF8C00"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/et_indice_questao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/et_indice_questao"
        app:layout_constraintTop_toTopOf="@id/et_indice_questao" />

</androidx.constraintlayout.widget.ConstraintLayout>